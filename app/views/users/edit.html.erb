<section class='row'>
  <aside class="col-lg-3 bg-secondary pt-2">
    <section class="user_info d-block mx-auto pb-4">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats pb-4 pl-5">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'layouts/side_header' %>
    </section>
  </aside>
  <div class='col-9'>
    <section class='blue-head'>
      <%= render 'layouts/header' %>
    </section>
    <% provide(:title, "Edit user") %>
    <h1>Update your profile</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :fullname %>
          <%= f.text_field :fullname, class: 'form-control' %>

          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control' %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %> <br>

          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
</section>