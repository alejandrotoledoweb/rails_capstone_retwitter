<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-3 bg-black pt-3">
    <section class="d-flex align-items-center justify-content-center pb-5">
      <h1>
        <%= gravatar_for @user %> <br>
      </h1>
      <h5 class='user-info ml-3'>
        <%= @user.username %>
      </h5>
    </section>
    <section class="stat pl-5">
      <%= render 'shared/stats' %>
    </section>
    <div class='pb-2'>
      <%= render 'follow_form' if logged_in? %>
    </div>
    <%= render 'layouts/side_header' %>
  </aside>
  

  <div class="col-md-9">
    <section class='blue-head'>
      <%= render 'layouts/header' %>
    </section>
    <section class='row'>
      <div class='col-8'>
      <p class='cover'>
        <img src="https://loremflickr.com/640/360" alt="Stack Overflow logo and icons and such">
       </p>
        <% if @user.messages.any? %>
          <h6 class='border-bottom pt-3 pb-3 mb-4'>MESSAGES (<%= @user.messages.count %>)</h6>
          <ol class="messages">
            <%= render @messages %>
          </ol>
          <%= will_paginate @messages %>
        <% end %>
      </div>
      <div class='col-4 side-rigth'>
      <div class='pl-5 text-black'>
        <%= render 'shared/user_info', class: 'text-black' %>
      </div>
        <%= render 'shared/current_user_stats' %>
        <h5 class='stat border-bottom pb-3 pt-3 pl-4 '>Followed By</h5>
        <div>
          <h3><%= @title %></h3>
          <% if @users.any? %>
            <ul class="users">
              <% @usersf.each do |user| %>
                <%= render user %> <br>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>